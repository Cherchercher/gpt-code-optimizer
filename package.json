{
  "name": "GPT GitHub Action",
  "version": "1.0.0",
  "private": false,
  "description": "Optimize, comment, write tests for code powered by GPT3/3.5/4",
  "main": "lib/main.js",
  "scripts": {
    "build": "ncc build src/main.js -o dist",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/typescript-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Cher Huang",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^5.1.1",
    "@actions/glob": "^0.4.0",
    "@actions/io": "^1.1.3",
    "@octokit/rest": "latest",
    "@types/html-to-text": "^9.0.0",
    "fast-xml-parser": "^4.1.3",
    "html-to-text": "latest",
    "ramda": "^0.28.0",
    "unescape": "latest"
  },
  "devDependencies": {
    "@types/istanbul-lib-report": "^3.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.10",
    "@types/ramda": "^0.28.23",
    "@typescript-eslint/parser": "^5.57.0",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.36.0",
    "eslint-plugin-github": "^4.7.0",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.5.0",
    "jest-circus": "^29.5.0",
    "js-yaml": "^4.1.0",
    "prettier": "2.8.7",
    "ts-jest": "^29.0.5",
    "typescript": "^5.0.2"
  }
}
